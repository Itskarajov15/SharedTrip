    <footer class="footer-bottom">
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-lg-6 text-center text-lg-left mb-3 mb-lg-0">
                    <!-- Copyright -->
                    <div class="copyright">
                        <p>
                            Copyright &copy; <script>
                                                 var CurrentYear = new Date().getFullYear()
                                                 document.write(CurrentYear)
                            </script>. Shared Trip
                        </p>
                    </div>
                </div>
