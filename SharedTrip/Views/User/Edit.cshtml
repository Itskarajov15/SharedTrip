@model EditUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@Model.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger ml-4"></div>
                        <fieldset class="p-4">
                            <div class="form-floating">
                                <input asp-for="@Model.FirstName" class="form-control mb-3" placeholder="First Name" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="@Model.LastName" class="form-control mb-3" placeholder="Last Name" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <label asp-for="@Model.ProfilePicture">Profile Picture</label>
                                <input asp-for="@Model.ProfilePicture" class="form-control mb-3" placeholder="Profile Picture" type="file" />
                                <span asp-validation-for="@Model.ProfilePicture" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="@Model.PhoneNumber" class="form-control mb-3" placeholder="Phone Number" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary font-weight-bold mt-3">Edit</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}