@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-area bg-1 text-center overly">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="content-block">
                    <h1>Happy Travel</h1>
                    <p>Join the millions who travel around the country and find new travel friends</p>
                </div>
                <div class="content-block">
                    <a asp-controller="Trip" asp-action="All" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="mt-4 p-5 bg-light homeDiv d-flex justify-content-center">
    <div class="d-flex justify-content-center mr-5">
        <i class="fa-solid fa-user fa-3x" data-toggle="tooltip" data-placement="top" title="Count of Users"></i><p class="increasingNumber" id="users"> :&nbsp;&nbsp;@Model.CountOfUsers</p>
    </div>
    <div class="d-flex justify-content-center ml-5">
        <i class="fa-solid fa-suitcase-rolling fa-3x" data-toggle="tooltip" data-placement="top" title="Count of Trips"></i><p class="increasingNumber" id="trips"> :&nbsp;&nbsp;@Model.CountOfTrips</p>
    </div>
</div>

@section Scripts{
    <script src="~/js/increasingNumbers.js"></script>
}