@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-area bg-1 text-center overly">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="content-block">
                    <h1>Happy Travel</h1>
                    <p>Join the millions who travel around the country and find new travel friends</p>
                </div>
                <div class="content-block">
                    <a asp-controller="Trip" asp-action="AllTrips" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="mt-4 p-5 bg-light text-align-center flex-">
    <div class="d-flex justify-content-center">
        <i class="fa-solid fa-user" data-toggle="tooltip" data-placement="top" title="Count of Users"></i>: <p id="users">@Model.CountOfUsers</p>
    </div>
    <div class="d-flex justify-content-center">
        <i class="fa-solid fa-suitcase-rolling" data-toggle="tooltip" data-placement="top" title="Count of Trips"></i>: <p id="trips">@Model.CountOfTrips</p>
    </div>
</div>

@section Scripts{
    <script>
        var speed = 10;

        function incEltNbr() {
            eltUsers = document.getElementById('users');
            endUsers = Number(document.getElementById('users').innerHTML);
            incNbrRec(0, endUsers, eltUsers);

            eltTrips = document.getElementById('trips');
            endTrips = Number(document.getElementById('trips').innerHTML);
            incNbrRec(0, endTrips, eltTrips);
        }

        function incNbrRec(i, endNbr, elt) {
            if (i <= endNbr) {
                elt.innerHTML = i;
                setTimeout(function () {
                    incNbrRec(i + 1, endNbr, elt);
                }, speed);
            }
        }

        window.onload = incEltNbr();
    </script>
}