@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger ml-4"></div>
                        <fieldset class="p-4">  
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control mb-3" placeholder="Email" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.FirstName" class="form-control mb-3" placeholder="First Name" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.LastName" class="form-control mb-3" placeholder="Last Name" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <label asp-for="Input.ProfilePicture">Profile Picture</label>
                                <input asp-for="Input.ProfilePicture" class="form-control mb-3" placeholder="Profile Picture" type="file" />
                                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control mb-3" placeholder="Phone Number" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control mb-3" placeholder="Password" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control mb-3" placeholder="Confirm Password" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary font-weight-bold mt-3">Register Now</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
